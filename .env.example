# 数字星球 - 环境变量配置示例
# 复制此文件为 .env 并填入实际的配置值

# API配置
API_BASE_URL=https://api.digitalplanet.com/api
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3

# 支付配置
# 支付宝配置
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do

# 微信支付配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_MCH_ID=your_wechat_mch_id
WECHAT_API_KEY=your_wechat_api_key
WECHAT_CERT_PATH=path/to/wechat/cert.pem
WECHAT_KEY_PATH=path/to/wechat/key.pem

# Stripe配置
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# 社交登录配置
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=https://yourdomain.com/auth/github/callback

# 微信登录
WECHAT_LOGIN_APP_ID=your_wechat_login_app_id
WECHAT_LOGIN_APP_SECRET=your_wechat_login_app_secret

# QQ登录
QQ_APP_ID=your_qq_app_id
QQ_APP_KEY=your_qq_app_key

# JWT配置
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=digitalplanet
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# 邮件配置
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_FROM_NAME=数字星球
MAIL_FROM_ADDRESS=noreply@digitalplanet.com

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_PATH=uploads/

# 安全配置
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# 缓存配置
CACHE_TTL=3600
CACHE_PREFIX=digitalplanet:

# 开发环境配置
NODE_ENV=development
DEBUG=true
PORT=3000

# 生产环境配置（仅在生产环境使用）
# NODE_ENV=production
# DEBUG=false
# PORT=80
# HTTPS_PORT=443
# SSL_CERT_PATH=path/to/ssl/cert.pem
# SSL_KEY_PATH=path/to/ssl/key.pem